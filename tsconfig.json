{ 
    "compilerOptions": { 
        "target": "es5", 
        "module": "ES6", 
        "lib": ["es2017", "DOM"], 
        "typeRoots": ["./node_modules/@types"],
        "declaration": true, 
        "sourceMap": true, 
        "outDir": "ts-dist", 
        "rootDir": "./ts", 
