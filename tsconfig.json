{ 
    "compilerOptions": { 
        "target": "es5", 
        "module": "ES6", 
        "lib": ["es2017", "DOM"], 
        "typeRoots": ["./node_modules/@types"],
        "declaration": true, 
        "sourceMap": true, 
        "outDir": "./js/dist", 
        "rootDir": "./js/src", 
        "strict": false, 
        "moduleResolution": "node", 
        "esModuleInterop": true, 
        "experimentalDecorators": true, 
        "emitDecoratorMetadata": true, 
        "skipLibCheck": true, 
        "forceConsistentCasingInFileNames": true 
    }, 
    "exclude": ["./js/dist"] 
}